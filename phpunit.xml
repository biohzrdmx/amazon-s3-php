<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true" cacheResultFile="tests/output/.phpunit.result.cache" bootstrap="tests/bootstrap.php" stopOnFailure="true">
    <testsuites>
        <testsuite name="Amazon S3 PHP Test Suite">
            <directory>./tests/</directory>
        </testsuite>
    </testsuites>
    <logging>
        <testdoxHtml outputFile="tests/output/phpunit.html"/>
    </logging>
    <coverage cacheDirectory="/tests/output">
        <include>
            <directory suffix=".php">./src/</directory>
        </include>
    </coverage>
</phpunit>
